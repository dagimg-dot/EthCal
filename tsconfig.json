{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "stignite": ["./packages/stignite/src/index.ts"],
      "stignite/*": ["./packages/stignite/src/*"]
    }
  },
  "include": ["ambient.d.ts", "src/**/*.ts", "packages/**/*.ts"]
}