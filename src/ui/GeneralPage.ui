<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EthCalGeneralPage" parent="AdwPreferencesPage">
    <property name="title" translatable="true">General</property>
    <property name="icon_name">preferences-system-symbolic</property>

    <!-- Status Bar Settings Group -->
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="true">Status Bar</property>
        <property name="description" translatable="true">Configure the status bar indicator appearance and position</property>

        <child>
          <object class="AdwComboRow" id="statusBarPosition">
            <property name="title" translatable="true">Position</property>
            <property name="subtitle" translatable="true">Position of the calendar indicator in the status bar</property>
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item translatable="true">Left</item>
                  <item translatable="true">Center</item>
                  <item translatable="true">Right</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwComboRow" id="statusBarFormat">
            <property name="title" translatable="true">Text Format</property>
            <property name="subtitle" translatable="true">Format for displaying date and time in status bar</property>
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item translatable="true">Full (Weekday Day Year HH:MM TimeDesc)</item>
                  <item translatable="true">Compact (Month Day HH:MM)</item>
                  <item translatable="true">Medium (Weekday Month Day HH:MM)</item>
                  <item translatable="true">Time Only (HH:MM TimeDesc)</item>
                  <item translatable="true">Date Only (Weekday Day Year)</item>
                </items>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>

    <!-- Calendar Settings Group -->
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="true">Calendar</property>
        <property name="description" translatable="true">Configure calendar display options</property>

        <child>
          <object class="AdwComboRow" id="calendarLanguage">
            <property name="title" translatable="true">Display Language</property>
            <property name="subtitle" translatable="true">Language for month and weekday names in calendar</property>
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item translatable="true">Amharic (አማርኛ)</item>
                  <item translatable="true">English</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwSwitchRow" id="useGeezNumerals">
            <property name="title" translatable="true">Use Geez Numerals</property>
            <property name="subtitle" translatable="true">Display calendar numbers using traditional Ethiopian numerals</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>